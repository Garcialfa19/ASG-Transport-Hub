rules_version = '2';

service cloud.firestore {
  match /databases/{db}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Publicly readable, authenticated writable
    match /alerts/{docId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /routes/{docId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Authenticated only
    match /drivers/{docId} {
      allow read, write: if isSignedIn();
    }

    // Users can manage their own subdocs if you need that path
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
