rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Public Collections: Allow public read, authenticated write ---
    match /routes/{routeId} {
      allow get: if true;
      allow list, write: if request.auth != null;
    }
    
    // Allow public list for routes
    match /routes {
      allow list: if true;
    }

    match /alerts/{alertId} {
      allow get: if true;
      allow list, write: if request.auth != null;
    }

    // Allow public list for alerts
    match /alerts {
      allow list: if true;
    }
    
    // --- Admin-Only Collections: Allow authenticated read/write ---
    match /drivers/{driverId} {
      allow read, write: if request.auth != null;
    }
    
    // --- User-Specific Data ---
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
